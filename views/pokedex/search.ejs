<!doctype html>
<html lang="en">
    <head>
        <%- include('../partials/head.ejs') %>
    </head>
    <body>
        <h1 id='heading'>List of All Pok√©mon</h1>
        <table id="table_id" class="display">
            <thead>
                <tr>
                    <th>index</th>
                    <th>name</th>
                    <th>image</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item, index) => { %>
                    <% let indexTable = index +1; %>
                    <tr>
                        <td><%=indexTable%></td>
                        <td><a href= '/<%=index%>'><%=item.name%></a></td>
                        <td><img src="<%= item.img %>" class='image-table'></td>
                        <td>
                            <div>
                                <form action="/<%=index%>/edit">
                                    <input type="submit" value="Edit" class="edit-button">
                                </form>
                                <form action="/<%=index%>?_method=DELETE" method="POST">
                                    <input type="submit" value="Delete" class="delete-button">
                                </form>
                            </div>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </body>
</html>